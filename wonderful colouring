#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;

        int freq[26] = {0};

        for (char c : s) {
            freq[c - 'a']++;
        }

        int C1 = 0;
        int C2 = 0;

        for (int i = 0; i < 26; i++) {
            if (freq[i] > 1) C1++;
            else if (freq[i] == 1) C2++;
        }

        int k = C1 + (C2 / 2);
        cout << k << "\n";
    }
    return 0;
}



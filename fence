


#include <iostream>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n, k;
    cin >> n >> k;

    int h[150005];
    for (int i = 0; i < n; i++) {
        cin >> h[i];
    }

    int currentSum = 0;
    for (int i = 0; i < k; i++) {
        currentSum += h[i];
    }

    int min_sum = currentSum;
    int min_index = 0;

    for (int i = k; i < n; i++) {
        currentSum += h[i] - h[i - k];
        if (currentSum < min_sum) {
            min_sum = currentSum;
            min_index = i - k + 1;
        }
    }

    cout << min_index + 1 << "\n";
    return 0;
}


